<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net461</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Office.Interop.Outlook" Version="15.0.4797.1003" />
        <PackageReference Include="WOX.Plugin" Version="1.3.159" />
         <Content Include="Images\**"> 
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory> 
        </Content> 
    </ItemGroup>

    <Target Name="CopyCustomContentOnPublish" AfterTargets="Publish">
        <Copy SourceFiles="nlog.config" DestinationFolder="$(PublishDir)" />
        <Copy SourceFiles="plugin.json" DestinationFolder="$(PublishDir)" />
    </Target>

</Project>
